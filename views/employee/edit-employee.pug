extends ../common.pug

block content
	h1 Edit employee
	span &nbsp;

	form(method="post")
		.input-group.mb-3
					.input-group-prepend
						label.input-group-text ID
						input(type="text",name="id",value= inforEmployee._id,readonly)
		.form-row
			.form-group.col-md-6
				label(for='inputEmail4') Email
				input#inputEmail4.form-control(type='email',name="email",value= inforEmployee.email)
			.form-group.col-md-6
				label(for='inputPassword4') Password
				input#inputPassword4.form-control(type='password',name="password",value= inforEmployee.password)
		.form-row
			.form-group.col-md-5
				label(for='name') Name
				input#name.form-control(type='text',name="name",value= inforEmployee.name)
			.form-group.col-md-3
				label(for='age') Age
				input#age.form-control(type='text',name="age",value= inforEmployee.age)
			.form-group.col-md-3
				label(for='gender') Gender
				input#gender.form-control(type='text',name="gender",value= inforEmployee.gender)
		.form-row
			.form-group.col-md-6
				label(for='phone') Phone
				input#phone.form-control(type='text',name="phone",value= inforEmployee.phone)
			.form-group.col-md-6
				label(for='inputPassword4') Address
				input#inputPassword4.form-control(type='text',name="address",value= inforEmployee.address)
		.form-row
			.form-group.col-md-5
				label(for='office') Office
				input#office.form-control(type='text',name="office",value= inforEmployee.office)
			.form-group.col-md-3
				label(for='work-time') Work-time
				input#work-time.form-control(type='text',name="workTime",value= inforEmployee.workTime)
			.form-group.col-md-3
				label(for='salary') Salary
				input#salary.form-control(type='text',name="salary",value= inforEmployee.salary)


		button.btn.btn-success Create
